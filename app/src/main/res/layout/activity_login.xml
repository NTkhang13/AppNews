<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/f0cc6037e8fe1a211bfa25d3b41100b4"
    tools:context=".Login">

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Báo Mới "
    android:textSize="30dp"
    android:layout_marginTop="45dp"
    android:textStyle="bold|normal|italic"
    android:textColor="@color/white"
    android:gravity="center">
</TextView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="25dp"
        app:cardElevation="10dp"
        android:weightSum="2"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:layout_marginStart="38dp"
        android:layout_marginEnd="38dp"
        app:cardUseCompatPadding="true">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="30dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/switch_tumbs">

                <TextView
                    android:id="@+id/loginIn"
                    android:layout_weight="1"
                    android:text="@string/loginin"
                    android:textColor="@color/textcolor"
                    android:textAlignment="center"
                    android:padding="5dp"
                    android:textSize="16sp"
                    android:textStyle="bold|normal"
                    android:background="@drawable/switch_trck"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/sighUp"
                    android:layout_weight="1"
                    android:text="Sigh Up"
                    android:textColor="#5C5858"
                    android:textAlignment="center"
                    android:padding="5dp"
                    android:paddingRight="15dp"
                    android:paddingLeft="15dp"
                    android:textSize="16sp"
                    android:textStyle="bold|normal"

                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/loginInlayout"
                android:padding="25dp"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Tài Khoản"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    app:shapeAppearanceOverlay="@style/Button4"
                    app:boxStrokeColor="#4E4A4A"
                    app:boxStrokeWidth="1dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName|textEmailAddress"
                        android:id="@+id/eUser"
                        android:ems="10"
                        android:textSize="13sp"
                        android:textStyle="normal"
                        android:textColor="@color/black"
                        >

                    </com.google.android.material.textfield.TextInputEditText>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Mật Khẩu"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    app:shapeAppearanceOverlay="@style/Button4"
                    app:boxStrokeColor="#4E4A4A"
                    app:boxStrokeWidth="1dp"
                    app:endIconMode="password_toggle"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:id="@+id/Pass"
                        android:ems="10"
                        android:textSize="13sp"
                        android:textStyle="normal"
                        android:textColor="@color/black"
                        >

                    </com.google.android.material.textfield.TextInputEditText>
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:text="Quên Mật Khẩu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="textEnd"
                    android:textSize="13sp"
                    android:textColor="#616161">

                </TextView>

            </LinearLayout>

            <Button
                android:id="@+id/login"
                android:textSize="17sp"
                android:text="@string/ng_nh_p"
                android:textAllCaps="false"
                android:gravity="center"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:textColor="@color/textcolor"
                app:shapeAppearanceOverlay="@style/Button5"
                android:elevation="15dp"
                app:backgroundTint="@color/redcolor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </Button>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="OR"
                android:gravity="center"
                android:textColor="@color/black"
                android:textStyle="bold|normal"
                android:textAlignment="center"
                android:layout_gravity="center">

            </TextView>
            
            <LinearLayout
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                        android:src="@drawable/icons8_facebook_64"
                        android:layout_margin="10dp"
                        android:layout_width="35dp"
                        android:layout_height="35dp">

                </ImageView>
                <ImageView
                    android:src="@drawable/icons8_apple_60"
                    android:layout_margin="10dp"
                    android:layout_width="35dp"
                    android:layout_height="35dp">

                </ImageView>
                <ImageView
                    android:src="@drawable/icons_gmail"
                    android:layout_margin="10dp"
                    android:layout_width="35dp"
                    android:layout_height="35dp">

                </ImageView>
                <ImageView
                    android:src="@drawable/icons_github"
                    android:layout_margin="10dp"
                    android:layout_width="35dp"
                    android:layout_height="35dp">

                </ImageView>
                <ImageView
                    android:src="@drawable/icons8_facebook_64"
                    android:layout_margin="10dp"
                    android:layout_width="35dp"
                    android:layout_height="35dp">

                </ImageView>
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>